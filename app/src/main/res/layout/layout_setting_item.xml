<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txt_title"
                android:text="绑定时间:"
                android:gravity="right"
                android:textSize="21sp"
                android:textColor="#999999"
                android:layout_width="107dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/txt_content"
                android:layout_marginLeft="18dp"
                android:text="2022010001"
                android:gravity="right|center_vertical"
                android:textSize="21sp"
                android:textColor="#333333"
                android:layout_width="400dp"
                android:layout_height="wrap_content"/>
            <com.lihang.ShadowLayout
                android:id="@+id/sl_operation"
                android:layout_marginLeft="27dp"
                android:layout_width="84dp"
                android:layout_height="40dp"
                app:hl_cornerRadius="2dp"
                app:hl_strokeWith="1dp"
                app:hl_strokeColor="#90c301"
                app:hl_layoutBackground="#1a90c301"
                app:hl_layoutBackground_true="#4D90C301"
                app:hl_shapeMode="pressed">
                <TextView
                    android:id="@+id/txt_operation"
                    android:gravity="center"
                    android:text="解绑"
                    android:textColor="#90c301"
                    android:textSize="21sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </com.lihang.ShadowLayout>
        </LinearLayout>
        <View
            android:layout_marginRight="100dp"
            android:layout_width="400dp"
            android:layout_height="1dp"
            android:background="#eeeeee"/>
    </LinearLayout>
</layout>