<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/ll_container"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txt_title"
                android:textColor="#333333"
                android:textSize="21sp"
                android:text="easyID:"
                android:layout_marginRight="9dp"
                android:layout_marginBottom="9dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <com.lihang.ShadowLayout
                android:focusable="true"
                android:focusableInTouchMode="true"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
                app:hl_cornerRadius="4dp"
                app:hl_shadowHidden="false"
                app:hl_shadowLimit="6dp"
                app:hl_shadowHiddenLeft="true"
                app:hl_shadowHiddenTop="true"
                app:hl_shadowColor="#0f333333"
                app:hl_shadowOffsetX="3dp"
                app:hl_shadowOffsetY="6dp"
                android:layout_marginStart="5dp"
                android:layout_width="276dp"
                android:layout_height="59dp">
                <EditText
                    android:id="@+id/edit_easyid"
                    android:textColor="#999999"
                    android:text="2020060001"
                    android:textSize="21sp"
                    android:inputType="number"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:background="@drawable/bg_edittext"
                    android:textCursorDrawable="@drawable/text_cursor"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </com.lihang.ShadowLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/txt_error"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/ll_container"
            app:layout_constraintRight_toRightOf="@+id/ll_container"
            android:textSize="16sp"
            tools:text="cuowu"
            android:layout_marginTop="-5dp"
            android:textColor="#ff3b30"
            android:layout_width="209dp"
            android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>