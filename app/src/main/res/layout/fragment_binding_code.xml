<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.fragment.BindingCodeFragment">

        <com.lihang.ShadowLayout
            app:hl_cornerRadius="2dp"
            app:hl_layoutBackground="@color/white"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="300dp">
            <LinearLayout
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <include
                    android:layout_width="533dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    layout="@layout/dialog_common_header"
                    android:id="@+id/dialog_header" />
                <View
                    android:layout_width="533dp"
                    android:layout_height="2dp"
                    android:background="#f7f7f7"/>
                <LinearLayout
                    android:layout_marginTop="16dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="设备SN: "
                        android:textSize="21sp"
                        android:textColor="#999999"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/txt_device_sn"
                        tools:text="12345678"
                        android:textSize="21sp"
                        android:textColor="#999999"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <com.lihang.ShadowLayout
                    android:layout_marginTop="16dp"
                    app:hl_cornerRadius="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/image_qrcode"
                        android:scaleType="fitXY"
                        android:background="#999999"
                        android:layout_width="187dp"
                        android:layout_height="187dp"/>
                    <LinearLayout
                        android:id="@+id/ll_success_tip"
                        android:visibility="gone"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="#CCD8D8D8"
                        android:layout_width="187dp"
                        android:layout_height="187dp">
                        <ImageView
                            android:id="@+id/image_qr_state"
                            android:src="@drawable/ic_icon_success"
                            android:layout_width="64dp"
                            android:layout_height="64dp"/>
                        <TextView
                            android:id="@+id/txt_qr_state"
                            android:text="验证通过"
                            android:layout_marginTop="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textColor="#333333"/>
                    </LinearLayout>
                </com.lihang.ShadowLayout>
                <TextView
                    android:id="@+id/txt_scan_state"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:text="系统管理员微信扫码确认"
                    android:layout_marginTop="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <com.lihang.ShadowLayout
                    android:id="@+id/sl_button_count"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="30dp"
                    android:layout_width="187dp"
                    android:layout_height="47dp"
                    app:hl_cornerRadius="2dp"
                    app:hl_layoutBackground="@color/primary_color">
                    <TextView
                        android:id="@+id/txt_count"
                        android:gravity="center"
                        android:textSize="21sp"
                        android:textColor="@color/white"
                        android:text="关闭（58s）"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </com.lihang.ShadowLayout>
            </LinearLayout>
        </com.lihang.ShadowLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>